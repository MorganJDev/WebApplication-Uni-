@model Tuple<List<Post>, List<Comment>>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/css/design.css"/>

<httpCookies httpOnlyCookies="true" requireSSL="true" />
<center>
    <h1>Home Page</h1>
</center>

@foreach (var post in Model.Item1)
{
    <div id="border1">
        <div class="row">
            <div class="postSpace">
                <div class="card">
                    <h2>@post.Title</h2>
                    <div class="content" style="height:200px;">@post.Content</div>
                    @foreach (var comment in Model.Item2)
                    {
                        @if (comment.PostId == post.Id)
                        {
                            <div id="border2">
                                <div id="padding1">
                                    <h5>@comment.Content</h5>
                                    <h6>@comment.MemberID</h6>
                                </div>
                            </div>
                        }
                    }
                    <button type="button"><a asp-controller="Comments" asp-action="Create" asp-route-id="@post.Id">Add Comment</a></button>
                    <p>@post.Posted</p>
                </div>
            </div>
        </div>
    </div>
}